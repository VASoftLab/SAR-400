<Window x:Class="CostumeRecorder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CostumeRecorder"
        xmlns:uc="clr-namespace:CostumeRecorder.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.8*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="10">
            <StackPanel Orientation="Vertical">
                <Button x:Name="ButtonConfig" Height="20" Margin="5" Content="Задать файл настроек" Click="ButtonConfig_Click"/>
                <Button x:Name="ButtonConnect" Height="20" Margin="5" Content="Подключиться" Click="ButtonConnect_Click"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Grid x:Name="GridCurrentValues" ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <uc:JointDisplay Grid.Row="0" Grid.Column="0"/>
                <uc:JointDisplay Grid.Row="0" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="0" Grid.Column="2"/>
                <uc:JointDisplay Grid.Row="0" Grid.Column="3"/>
                <uc:JointDisplay Grid.Row="1" Grid.Column="0"/>
                <uc:JointDisplay Grid.Row="1" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="1" Grid.Column="2"/>
                <uc:JointDisplay Grid.Row="1" Grid.Column="3"/>
                <uc:JointDisplay Grid.Row="2" Grid.Column="0"/>
                <uc:JointDisplay Grid.Row="2" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="2" Grid.Column="2"/>
                <uc:JointDisplay Grid.Row="2" Grid.Column="3"/>
                <uc:JointDisplay Grid.Row="3" Grid.Column="0"/>
                <uc:JointDisplay Grid.Row="3" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="3" Grid.Column="2"/>
                <uc:JointDisplay Grid.Row="3" Grid.Column="3"/>
                <uc:JointDisplay Grid.Row="4" Grid.Column="0"/>
                <uc:JointDisplay Grid.Row="4" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="4" Grid.Column="2"/>
                <uc:JointDisplay Grid.Row="4" Grid.Column="3"/>
                <uc:JointDisplay Grid.Row="5" Grid.Column="0"/>
                <uc:JointDisplay Grid.Row="5" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="5" Grid.Column="2"/>
                <uc:JointDisplay Grid.Row="5" Grid.Column="3"/>
                <uc:JointDisplay Grid.Row="6" Grid.Column="1"/>
                <uc:JointDisplay Grid.Row="6" Grid.Column="2"/>
            </Grid>
        </Border>
    </Grid>
</Window>
